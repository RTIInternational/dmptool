<div class="form-group col-xs-8">
  <%= f.label(:title, _('Preferred repositories'), class: "control-label") %>
  <%= f.check_box(:restriction, class: "control-label") %>
  <%= f.label(:title, _('Require Researchers select from this list:'), class: "control-label") %>
</div>
<% if Rails.configuration.x.madmp.enable_repository_selection && Repository.all.any? %>
  <div class="form-group row">
    <div class="col-md-12">
      <span class="col-md-12">
        <h3><%= label_tag _("Intended repositories") %></h3>
      </span>
    </div>
  </div>

<div>
<% if @repositories.blank? %>
<p>There are no preferred repositories currently in the system.</p>
<% else %>
<p>These are the current books in our system</p>
<ul id = "repositories">
   <% @repositories.each do |c| %>
   <li><%= link_to c.title, {:action => 'show', :id => c.id} -%></li>
   <% end %>
</ul>
</div>
<div class="form-group col-xs-8">
<%= f.button(_('Add a repository'), class: 'btn btn-default', type: "submit", disabled="disabled") %>
    <div class="form-group row">
      <%= render partial: "layouts/modal_search/adminselections",
              locals: {
                namespace: "metadata_standards",
                button_label: _("Add a repository"),
                item_name_attr: :title,
                results: research_output.metadata_standards,
                selected: true,
                result_partial: "research_outputs/metadata_standards/search_result",
                search_path: plan_metadata_standard_search_path(research_output.plan),
                search_method: :get
              } %>
    </div>
</div>